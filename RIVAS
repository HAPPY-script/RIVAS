local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local StarterGui = game:GetService("StarterGui")
local LocalPlayer = Players.LocalPlayer
local Camera = workspace.CurrentCamera

local isAiming = false
local isAimbotEnabled = true
local aimMode = "center"
local ignoredPlayers = {} -- Danh s√°ch ng∆∞·ªùi b·ªã lo·∫°i kh·ªèi aimbot
local espObjects = {} -- L∆∞u ESP c·ªßa ng∆∞·ªùi ch∆°i
local currentTarget = nil -- Ng∆∞·ªùi ƒëang b·ªã aim v√†o

-- Hi·ªÉn th·ªã th√¥ng b√°o
local function Notify(message)
    StarterGui:SetCore("SendNotification", {
        Title = "Aim Assist",
        Text = message,
        Duration = 5
    })
end

Notify("Script kh·ªüi ƒë·ªông! Gi·ªØ chu·ªôt ph·∫£i ƒë·ªÉ nh·∫Øm.\nNh·∫•n [T] ƒë·ªÉ ƒë·ªïi ch·∫ø ƒë·ªô.\nNh·∫•n [Y] ƒë·ªÉ b·∫≠t/t·∫Øt aimbot.\nNh·∫•n [B] ƒë·ªÉ lo·∫°i b·ªè ng∆∞·ªùi ch∆°i g·∫ßn.\nNh·∫•n [N] ƒë·ªÉ th√™m l·∫°i t·∫•t c·∫£.")

-- Ki·ªÉm tra xem ng∆∞·ªùi ch∆°i c√≥ b·ªã lo·∫°i b·ªè kh√¥ng
local function IsIgnored(player)
    return ignoredPlayers[player] == true
end

-- X√≥a danh s√°ch ng∆∞·ªùi b·ªã lo·∫°i b·ªè
local function ClearIgnoredPlayers()
    ignoredPlayers = {}
    Notify("ƒê√£ th√™m l·∫°i t·∫•t c·∫£ ng∆∞·ªùi ch∆°i v√†o aimbot.")
end

-- Lo·∫°i b·ªè t·∫•t c·∫£ ng∆∞·ªùi ch∆°i trong b√°n k√≠nh 70m
local function RemovePlayersInRange()
    local character = LocalPlayer.Character
    if not character or not character:FindFirstChild("HumanoidRootPart") then return end

    local playerPosition = character.HumanoidRootPart.Position
    local removedCount = 0

    for _, otherPlayer in pairs(Players:GetPlayers()) do
        if otherPlayer ~= LocalPlayer and otherPlayer.Character and otherPlayer.Character:FindFirstChild("HumanoidRootPart") then
            local distance = (otherPlayer.Character.HumanoidRootPart.Position - playerPosition).Magnitude
            if distance <= 70 then
                ignoredPlayers[otherPlayer] = true
                removedCount = removedCount + 1
            end
        end
    end

    Notify("ƒê√£ lo·∫°i b·ªè " .. removedCount .. " ng∆∞·ªùi ch∆°i trong ph·∫°m vi 70m kh·ªèi aimbot.")
end

-- Nh·∫•n gi·ªØ chu·ªôt ph·∫£i ƒë·ªÉ b·∫≠t nh·∫Øm
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end

    if input.UserInputType == Enum.UserInputType.MouseButton2 then
        isAiming = true
    elseif input.KeyCode == Enum.KeyCode.T then
        aimMode = (aimMode == "center") and "player" or "center"
        Notify("Ch·∫ø ƒë·ªô nh·∫Øm: " .. (aimMode == "center" and "G·∫ßn t√¢m" or "G·∫ßn nh√¢n v·∫≠t"))
    elseif input.KeyCode == Enum.KeyCode.Y then
        isAimbotEnabled = not isAimbotEnabled
        Notify("Aimbot: " .. (isAimbotEnabled and "B·∫≠t" or "T·∫Øt"))
    elseif input.KeyCode == Enum.KeyCode.B then
        RemovePlayersInRange()
    elseif input.KeyCode == Enum.KeyCode.N then
        ClearIgnoredPlayers()
    end
end)

UserInputService.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton2 then
        isAiming = false
        currentTarget = nil
    end
end)

-- T·∫°o ESP n·∫øu ch∆∞a c√≥
local function CreateESP(player)
    if not player.Character then return end

    local highlight = Instance.new("Highlight")
    highlight.FillTransparency = 1
    highlight.Parent = player.Character
    espObjects[player] = highlight
end

-- C·∫≠p nh·∫≠t m√†u vi·ªÅn ESP
local function UpdateESP(player)
    if not player.Character then return end

    -- N·∫øu ch∆∞a c√≥ ESP, t·∫°o m·ªõi
    if not espObjects[player] then
        CreateESP(player)
    end

    -- C·∫≠p nh·∫≠t m√†u vi·ªÅn ESP
    local esp = espObjects[player]
    if player == currentTarget then
        esp.OutlineColor = Color3.fromRGB(255, 255, 0) -- üü° Aim v√†o th√¨ m√†u v√†ng
    elseif IsIgnored(player) then
        esp.OutlineColor = Color3.fromRGB(0, 255, 0) -- üü¢ N·∫øu b·ªã lo·∫°i b·ªè th√¨ m√†u xanh l√°
    else
        esp.OutlineColor = Color3.fromRGB(255, 0, 0) -- üî¥ C√≤n l·∫°i l√† m√†u ƒë·ªè
    end
end

-- T√¨m ng∆∞·ªùi ch∆°i g·∫ßn t√¢m m√†n h√¨nh
local function GetClosestPlayerToCenter()
    local closestPlayer = nil
    local closestDistance = math.huge
    local crosshairPosition = Vector2.new(Camera.ViewportSize.X / 2, Camera.ViewportSize.Y / 2)
    local maxRadius = 200  

    for _, otherPlayer in pairs(Players:GetPlayers()) do
        if otherPlayer ~= LocalPlayer and not IsIgnored(otherPlayer) and otherPlayer.Character and otherPlayer.Character:FindFirstChild("Head") then
            local head = otherPlayer.Character.Head
            local screenPoint, onScreen = Camera:WorldToViewportPoint(head.Position)
            if onScreen then
                local screenPos = Vector2.new(screenPoint.X, screenPoint.Y)
                local distance = (screenPos - crosshairPosition).magnitude
                if distance < closestDistance and distance <= maxRadius then
                    closestDistance = distance
                    closestPlayer = otherPlayer
                end
            end
        end
    end
    return closestPlayer
end

-- T√¨m ng∆∞·ªùi ch∆°i g·∫ßn nh√¢n v·∫≠t
local function GetClosestPlayerToPlayer()
    local closestPlayer = nil
    local closestDistance = math.huge
    local character = LocalPlayer.Character
    if not character or not character:FindFirstChild("HumanoidRootPart") then return nil end

    local playerPosition = character.HumanoidRootPart.Position

    for _, otherPlayer in pairs(Players:GetPlayers()) do
        if otherPlayer ~= LocalPlayer and not IsIgnored(otherPlayer) and otherPlayer.Character and otherPlayer.Character:FindFirstChild("Head") then
            local head = otherPlayer.Character.Head
            local distance = (head.Position - playerPosition).Magnitude
            if distance < closestDistance then
                closestDistance = distance
                closestPlayer = otherPlayer
            end
        end
    end
    return closestPlayer
end

-- C·∫≠p nh·∫≠t camera ƒë·ªÉ aim v√†o m·ª•c ti√™u
RunService.RenderStepped:Connect(function()
    -- ƒê·∫£m b·∫£o t·∫•t c·∫£ ng∆∞·ªùi ch∆°i ƒë·ªÅu c√≥ ESP ngay l·∫≠p t·ª©c
    for _, otherPlayer in pairs(Players:GetPlayers()) do
        if not espObjects[otherPlayer] then
            CreateESP(otherPlayer)
        end
        UpdateESP(otherPlayer)
    end

    if isAiming and isAimbotEnabled then
        local target = nil
        if aimMode == "center" then
            target = GetClosestPlayerToCenter()
        else
            target = GetClosestPlayerToPlayer()
        end

        if target and target.Character and target.Character:FindFirstChild("Head") then
            local headPosition = target.Character.Head.Position
            Camera.CFrame = CFrame.new(Camera.CFrame.Position, headPosition)
            currentTarget = target
        else
            currentTarget = nil
        end
    end
end)

--animation H
local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")

local LocalPlayer = Players.LocalPlayer
local AnimationId = "rbxassetid://507770818"
local Animation
local AnimationTrack

-- H√†m t·∫£i animation
local function LoadAnimation(character)
    local Humanoid = character:WaitForChild("Humanoid", 5) -- Ch·ªù humanoid xu·∫•t hi·ªán
    if not Humanoid then return end

    local Animator = Humanoid:FindFirstChildOfClass("Animator")
    if not Animator then
        Animator = Instance.new("Animator")
        Animator.Parent = Humanoid
    end

    Animation = Instance.new("Animation")
    Animation.AnimationId = AnimationId
    AnimationTrack = Animator:LoadAnimation(Animation)
end

-- H√†m x·ª≠ l√Ω khi nh·∫•n H
local function onInputBegan(input, gameProcessed)
    if gameProcessed or UserInputService:GetFocusedTextBox() then return end -- Kh√¥ng k√≠ch ho·∫°t khi chat

    if input.KeyCode == Enum.KeyCode.H and AnimationTrack then
        if AnimationTrack.IsPlaying then
            AnimationTrack:Stop()
        else
            AnimationTrack:Play()
        end
    end
end

-- Khi nh√¢n v·∫≠t xu·∫•t hi·ªán ho·∫∑c h·ªìi sinh
LocalPlayer.CharacterAdded:Connect(function(character)
    LoadAnimation(character)
end)

UserInputService.InputBegan:Connect(onInputBegan)

-- N·∫øu nh√¢n v·∫≠t ƒë√£ t·ªìn t·∫°i, t·∫£i animation ngay
if LocalPlayer.Character then
    LoadAnimation(LocalPlayer.Character)
end
